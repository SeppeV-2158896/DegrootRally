<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/hoofdMenuFragment">
    <fragment
        android:id="@+id/hoofdMenuFragment"
        android:name="be.seppevandenberk.degrootrally.fragments.HoofdMenuFragment"
        android:label="fragment_hoofd_menu"
        tools:layout="@layout/fragment_hoofd_menu" />
    <fragment
        android:id="@+id/kalenderEnResultatenFragment"
        android:name="be.seppevandenberk.degrootrally.fragments.KalenderEnResultatenFragment"
        android:label="fragment_kalender_en_resultaten"
        tools:layout="@layout/fragment_kalender_en_resultaten" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="be.seppevandenberk.degrootrally.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="be.seppevandenberk.degrootrally.fragments.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="be.seppevandenberk.degrootrally.fragments.SignUpFragment"
        android:label="SignUpFragment" />
</navigation>